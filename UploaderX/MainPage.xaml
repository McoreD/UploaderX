<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UploaderX.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="10"
            VerticalOptions="StartAndExpand">

            <Image
                Source="sharex_logo.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Start" />

            <Label
                Text="UploaderX"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <HorizontalStackLayout>
                <Button x:Name="btnBrowseWatchDir" Text="Browse" Margin="10"></Button>
                <Label x:Name="txtWatchDir" Margin="10"></Label>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Button x:Name="btnGo" Text="Go" Margin="10" Clicked="btnGo_ClickedAsync"></Button>
                <Label x:Name="lblUrl"></Label>
            </HorizontalStackLayout>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

