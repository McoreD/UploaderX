<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:UploaderX"
             x:Class="UploaderX.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
    </Application.Styles>


    <TrayIcon.Icons>
        <TrayIcons>
          <TrayIcon Icon="/Assets/sharex.ico" ToolTipText="Avalonia Tray Icon ToolTip">
            <TrayIcon.Menu>
              <NativeMenu>
                <NativeMenuItem Header="Exit" Command="{Binding ExitCommand}" />
              </NativeMenu>
            </TrayIcon.Menu>
          </TrayIcon>
        </TrayIcons>
      </TrayIcon.Icons>

</Application>

